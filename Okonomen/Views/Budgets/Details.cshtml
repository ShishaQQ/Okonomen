@model Okonomen.Models.Budget

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Budget</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2" hidden="hidden">
            @Html.DisplayNameFor(model => model.User)
        </dt>
        <dd class="col-sm-10" hidden="hidden">
            @Html.DisplayFor(model => model.User.UserName)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BudgetItems)
        </dt>
        @foreach (var i in Model.BudgetItems)
        {
            <dd>
                @Html.DisplayFor(modelItem => i.Name) @Html.DisplayFor(modelItem => i.Number) 
                <br />
            </dd>      
        }


    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
